<script>
  export default {
    name: 'CmField',
    template: '#cm-field-tpl',
    props: {
      prop: String,
      label: String,
      type: String,
      formPath: String,
      modelValue: null
    },
    setup(props, {emit}) {
      const { ref } = global.Vue
      const value = ref(null)
      function onInput(e) {
        // console.log('onInput', props.modelValue, e)
        emit('update:modelValue', value.value)
      }
      function onChange(e) {
        emit('update:modelValue', value.value)
      }
      return {
        onInput,
        value,
        onChange,
      }
    },
  };
</script>

