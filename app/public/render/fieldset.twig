
{% import "./macros/formGroup.twig" as formGroup %}

<template>
<el-form-item :prop="prop" :x-path="formPath" :label="label">
  {{ formGroup.formItem("modelValue") }}
</el-form-item>
</template>
<script>
  export default {
    name: 'CmField',
    props: {
      prop: String,
      label: String,
      type: String,
      formPath: String,
      modelValue: null
    },
    setup(props, {emit}) {
      function onInput(e) {
        // console.log('onInput', props.modelValue, e)
        emit('update:modelValue', props.modelValue)
      }
      function onChange(e) {
        emit('update:modelValue', props.modelValue)
      }
      return {
        onInput,
        onChange,
      }
    },
  };
</script>

